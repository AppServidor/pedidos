{% extends 'base.html.twig' %}

{% block title %}Restaurante index{% endblock %}

{% block body %}
    <h1>Restaurante index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Correo</th>
                <th>Roles</th>
                <th>Password</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for restaurante in restaurantes %}
            <tr>
                <td>{{ restaurante.id }}</td>
                <td>{{ restaurante.correo }}</td>
                <td>{{ restaurante.roles ? restaurante.roles|json_encode : '' }}</td>
                <td>{{ restaurante.password }}</td>
                <td>
                    <a href="{{ path('restaurante_show', {'id': restaurante.id}) }}">show</a>
                    <a href="{{ path('restaurante_edit', {'id': restaurante.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('restaurante_new') }}">Create new</a>
{% endblock %}
